rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow reads to the global logo settings for everyone,
    // and writes for authenticated users.
    match /settings/logo {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow an authenticated user to create, read, and update their own user document.
    // This is crucial for tracking login times and other user-specific data.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow a user to manage all documents within their own sub-collections
    // (e.g., creating, reading, updating, and deleting conversations).
    match /users/{userId}/{documents=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
