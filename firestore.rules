
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read and write only their own data (conversations, etc.)
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to read and write app settings like the logo.
    // For a production app, this should be restricted to admin roles.
    match /settings/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
