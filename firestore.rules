rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow reads to the global logo settings for everyone,
    // and writes for authenticated users.
    match /settings/logo {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow a user to read and write to any document within their own
    // user data tree. This single rule covers creating their user document,
    // updating it, and managing all sub-collections like conversations.
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
