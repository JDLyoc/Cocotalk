
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow reads to the global logo settings for everyone
    match /settings/logo {
      allow read: if true;
    }

    // Allow authenticated users to upload a new logo
    match /settings/logo {
      allow write: if request.auth != null;
    }

    // Allow users to create their own user document
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read and write ONLY their own sub-collections (conversations, cocotalks, etc.)
    match /users/{userId}/{document=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
